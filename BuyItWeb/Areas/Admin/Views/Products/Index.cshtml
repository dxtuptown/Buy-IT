@model IEnumerable<BuyItData.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<br />
<h1>Index</h1>

<div class="col-6">
    <a asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Create New</a>
</div>
<br />
<table class="table table-borderd">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                ISBN
            </th>
            <th>
                Author
            </th>
            <th>
                List Price
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
                <td class="col-6 text-end">
                    <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ProductID" class="btn btn-primary"><i class="bi bi-info-circle"></i> Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-primary"><i class="bi bi-trash"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>


</table>
<br />

