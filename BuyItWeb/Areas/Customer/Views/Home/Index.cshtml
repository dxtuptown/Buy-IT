@model IEnumerable<BuyItData.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row pd-3">
    <br />
    <h1 class="display-4"></h1>
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px  #7E7978;border-radius:5px">
                    <div class="card" style="border-collapse:collapse">
                        <img src="@item.ImageUrl"/> 
                        <div class="card-body">
                         <div class="pl-1">
                            <p class="card-title h5 text primary">@Html.DisplayFor(modelItem => item.ProductName)</p>
                            <p class="card-title h5 text primary">@Html.DisplayFor(modelItem => item.Category.CategoryName)</p>
                        </div>                            
                        <div class="pl-1">
                            <p>List Price: <strike>@item.ListPrice.ToString("0.00")</strike></p>  
                            <a asp-action="Details" asp-route-id="@item.ProductID" style="border:1px  #7E7978;border-radius:5px" class="btn btn-primary bg-gradient border-0 form-control"><i class="bi bi-info-circle"></i>Details</a>                                
                        </div>
                        </div>                        
                    </div>                    
                </div>
            </div>
        </div>
    }
    
</div>
